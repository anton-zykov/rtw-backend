model TrickyTask {
  id       String              @id @default(uuid())
  age      Int
  options  Json                @db.JsonB // { word: string; correct: boolean }
  students StudentTrickyTask[]
}

model StudentTrickyTask {
  studentId  Int
  taskId     String
  weight     Int        @default(10)

  timesSeen  Int        @default(0)
  lastSeenAt DateTime?  @db.Timestamptz(3)

  student    Student    @relation(fields: [studentId], references: [id], onDelete: Cascade)
  task       TrickyTask @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@id([studentId, taskId])
  @@index([studentId])
  @@index([taskId])
}

