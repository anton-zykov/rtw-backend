model GenitiveTask {
  id         String                @id @default(uuid())
  nominative String                @db.VarChar(255)
  options    Json                  @db.JsonB // { word: string; correct: boolean }
  students   StudentGenitiveTask[]
}

model StudentGenitiveTask {
  studentId  Int
  taskId     String
  weight     Int          @default(10)

  timesSeen  Int          @default(0)
  lastSeenAt DateTime?    @db.Timestamptz(3)

  student    Student      @relation(fields: [studentId], references: [id], onDelete: Cascade)
  task       GenitiveTask @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@id([studentId, taskId])
  @@index([studentId])
  @@index([taskId])
}
