model StressTask {
  id      String @id @default(uuid())
  options Json   @db.JsonB // { word: string; correct: boolean }
  students StudentStressTask[]
}

model StudentStressTask {
  studentId  String    @db.Uuid
  taskId     String
  weight     Int       @default(10)

  timesSeen  Int       @default(0)
  lastSeenAt DateTime? @db.Timestamptz(3)

  student    Student       @relation(fields: [studentId], references: [id], onDelete: Cascade)
  task       StressTask  @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@id([studentId, taskId])
  @@index([studentId])
  @@index([taskId])
}
