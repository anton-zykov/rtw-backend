    "fastify-type-provider-zod": "^6.0.0",
    "redis": "^5.9.0",
    "telegraf": "^4.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.5.2",
    "c8": "^10.1.3",
