  "imports": {
    "#/*": {
      "development": "./src/*",
      "default": "./dist/*"
    }
  },
  "main": "index.js",
  "scripts": {
    "dev": "node --conditions=development --import tsx --watch ./src/index.ts",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.json",
    "start": "node dist/src/index.js",
    "test": "vitest",
    "db:seed": "docker compose exec -T db psql -U postgres -d rtw_dev < db/seed.sql"
  },
